<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.thiennguyen.note.Emergency"
    tools:showIn="@layout/emergency">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/Duty"
            android:text="On Duty"
            android:layout_width="wrap_content"
            android:layout_weight="0.50"
            android:onClick="onDuty"/>

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/emergency"
            android:text="Emergency Contact"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_weight="0.50"
            android:onClick="emerg"/>

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/Leave"
            android:text="On Leave"
            android:layout_width="wrap_content"
            android:onClick="coming"
            android:layout_weight="0.50"/>


    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight ="0.5"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:rowCount="13"
                android:columnCount="2"
                android:id="@+id/contacts">
                //row 0
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Fire&amp;Ambulance"
                    android:id="@+id/textView2"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="#ffcccc"
                    android:layout_columnWeight="0.5"
                    android:textIsSelectable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="995"
                    android:id="@+id/textView3"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:autoLink="phone"
                   android:layout_gravity="right"
                    android:background="#ffcccc"
                    android:layout_columnWeight="0.5"
                    android:autoText="false"
                    android:clickable="true"
                    android:textIsSelectable="true" />
                //row 1
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Police"
                    android:id="@+id/textView4"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="0.5"
                    android:textIsSelectable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="999"
                    android:id="@+id/textView5"
                    android:layout_row="1"
                    android:layout_column="1"                     android:autoLink="phone"
android:layout_gravity = "right"
                    android:layout_columnWeight="0.5"
                    android:clickable="true"
                    android:textIsSelectable="true" />
                //row 2
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Campus Security"
                    android:id="@+id/textView6"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:background="#ffcccc"
                    android:layout_columnWeight="0.5"
                    android:textIsSelectable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="6874-1616"
                    android:id="@+id/textView7"
                    android:layout_row="2"
                    android:layout_column="1"                     android:autoLink="phone"
                    android:layout_gravity = "right"
                    android:background="#ffcccc"
                    android:layout_columnWeight="0.5"
                    android:clickable="true"
                    android:phoneNumber="true"
                    android:textIsSelectable="true"
                    android:editable="false" />
                //row 3
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="NUH"
                    android:id="@+id/textView8"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_columnWeight="0.5"
                    android:textIsSelectable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="6779-5555"
                    android:id="@+id/textView9"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_gravity = "right"
                    android:autoLink="phone"
                    android:layout_columnWeight="0.5"
                    android:clickable="true"
                    android:phoneNumber="true"
                    android:textIsSelectable="true"
                    android:editable="false" />

                //row 4
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="UHC"
                    android:id="@+id/textView10"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:background="#ffcccc"

                    android:layout_columnWeight="0.5"
                    android:textIsSelectable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="6874-2880"
                    android:id="@+id/textView11"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_gravity = "right"
                    android:autoLink="phone"
                    android:background="#ffcccc"
                    android:layout_columnWeight="0.5"
                    android:clickable="true"
                    android:phoneNumber="true"
                    android:textIsSelectable="true"
                    android:editable="false" />

                //row 5
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Maintenance UTR"
                    android:id="@+id/textView12"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_columnWeight="0.5"
                    android:textIsSelectable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="6516-1515"
                    android:id="@+id/textView13"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_gravity = "right"
                    android:autoLink="phone"
                    android:layout_columnWeight="0.5"
                    android:clickable="true"
                    android:phoneNumber="true"
                    android:textIsSelectable="true"
                    android:editable="false" />


                //row 6
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="IT care"
                    android:id="@+id/textView14"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:background="#ffcccc"
                    android:layout_columnWeight="0.5"
                    android:textIsSelectable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="6516-2080"
                    android:id="@+id/textView15"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:layout_gravity = "right"
                    android:autoLink="phone"
                    android:background="#ffcccc"
                    android:layout_columnWeight="0.5"
                    android:clickable="true"
                    android:phoneNumber="true"
                    android:textIsSelectable="true"
                    android:editable="false" />

                //row 7
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="UTR Mailbox"
                    android:id="@+id/textView16"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_columnWeight="0.5"
                    android:textIsSelectable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="utr@nus.edu.sg"
                    android:id="@+id/textView17"
                    android:maxWidth="100dip"
                    android:autoLink="email"
                    android:layout_gravity = "right"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:layout_columnWeight="0.5"
                    android:textIsSelectable="true" />

                //row 8
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Lock Out"
                    android:id="@+id/textView18"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:background="#ffcccc"
                    android:layout_columnWeight="0.5"
                    android:textIsSelectable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="9138-5713"
                    android:id="@+id/textView19"
                    android:layout_row="8"
                    android:layout_column="1"
                    android:layout_gravity = "right"
                    android:autoLink="all"
                    android:background="#ffcccc"
                    android:layout_columnWeight="0.5"
                    android:clickable="true"
                    android:phoneNumber="true"
                    android:textIsSelectable="true"
                    android:editable="false" />

                //row 10

                //row 11

                //row 12

            </GridLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
