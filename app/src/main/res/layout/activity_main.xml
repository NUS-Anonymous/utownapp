<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">




    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/Duty"
            android:text="On Duty"
            android:layout_width="wrap_content"
            android:layout_weight="0.50" />

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/emergency"
            android:text="Emergency Contact"
            android:layout_width="wrap_content"
            android:layout_weight="0.50"/>

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/Leave"
            android:text="On Leave"
            android:layout_width="wrap_content"
            android:layout_weight="0.50"/>

    </LinearLayout>


    <FrameLayout
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.3"
        android:id="@+id/frameLayout">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:src="@drawable/utown"
                android:layout_weight="20"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="@dimen/abc_action_bar_default_padding_end_material"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="RA on Duty"
                android:id="@+id/textView"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="#ffffff"
                android:background="#ff66a3"
                android:fontFamily="sans-serif"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_weight="80"
                android:layout_gravity="top|right|fill" />

        </GridLayout>

    </FrameLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:layout_weight ="0.5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="left|top"
            android:layout_below="@+id/frameLayout"
            android:weightSum="1">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_weight="0.40"
                android:paddingTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:alignmentMode="alignBounds">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Loading..."
                    android:id="@+id/RA1"
                    android:layout_row="0"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Loading..."
                    android:id="@+id/phone1"
                    android:layout_row="0"
                    android:layout_column="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Loading..."
                    android:id="@+id/RA2"
                    android:layout_row="1"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Loading..."
                    android:id="@+id/phone2"
                    android:layout_row="1"
                    android:layout_column="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Loading..."
                    android:id="@+id/RA3"
                    android:layout_row="2"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Loading..."
                    android:id="@+id/phone3"
                    android:layout_row="2"
                    android:layout_column="2" />

            </GridLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>